<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="330dp"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="@drawable/selgamesback"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quit"
        android:layout_gravity="end"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:id="@+id/close"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a game to play"
        android:textSize="30sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ko en Touro"
        android:id="@+id/buttbullcow"
        android:background="#000"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Fly Game"
        android:id="@+id/butthelecop"
        android:layout_marginTop="20dp"
        />



</LinearLayout>